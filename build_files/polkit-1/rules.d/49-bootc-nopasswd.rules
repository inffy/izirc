// Allow users in the wheel group to run bootc commands without sudo
// This enables bootc status, bootc upgrade, and other bootc operations to be run directly
// Bootc uses rpm-ostree/ostree polkit actions under the hood
// Only affects administrative users (wheel group members)

polkit.addRule(function(action, subject) {
    if (action.id.indexOf("org.projectatomic.rpmostree1.") === 0 &&
        subject.isInGroup("wheel")) {
        return polkit.Result.YES;
    }
});
