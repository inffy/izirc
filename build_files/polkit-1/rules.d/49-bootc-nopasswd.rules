// Allow users in the wheel group to run bootc commands without password
// This enables bootc status and bootc update to be run without sudo

polkit.addRule(function(action, subject) {
    if ((action.id == "org.containers.bootc" ||
         action.id.indexOf("org.containers.bootc.") === 0) &&
        subject.isInGroup("wheel")) {
        return polkit.Result.YES;
    }
});
